{
  "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es6"],
      "types": ["node", "jest"],
      "module": "commonjs",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "strictNullChecks": false,
      "target": "es6"
  },
  "include": ["src"]
}